=render partial: "layouts/fav_frame"
-if current_user
  -if @fav.any?
    .span10
      .hero-unit
        %h3 Teams
        -@fav.each do |fav|
          .hero-unit
            .btn.btn-mini.pull-right= link_to "Delete", {controller: 'team_favorites', action: 'destroy', id: fav.id}, method: :delete
            %h4
              =link_to fav.team.team_name, {controller: "team", action: "show", team_id: fav.team.team_id}
              %small= "#{fav.team.tp_w}wins/#{fav.team.tp_l}loses - #{fav.team.win_pct.round(3)}"
            %h5 Batting
            %table.table.table-striped
              %thead
                %tr
                  %th AVG
                  %th SLG
                  %th OBP
                  %th OPS
                  %th 2B
                  %th 3B
                  %th HR
                  %th RBI
                  %th SAC
                  %th BB
                  %th SO
                  %th SB
                  %th CS
              %tbody
                %tr
                  %td= fav.team.tb_avg
                  %td= fav.team.tb_slg
                  %td= fav.team.tb_obp
                  %td= fav.team.tb_ops
                  %td= fav.team.tb_b2
                  %td= fav.team.tb_b3
                  %td= fav.team.tb_hr
                  %td= fav.team.tb_rbi
                  %td= fav.team.tb_sac
                  %td= fav.team.tb_bb
                  %td= fav.team.tb_so
                  %td= fav.team.tb_sb
                  %td= fav.team.tb_cs
            %h5 Pitching
            %table.table.table-striped
              %thead
                %tr
                  %th ERA
                  %th WHIP
                  %th H
                  %th HR
                  %th BB
                  %th SO
                  %th HOLD
                  %th SHO
                  %th SV
                  %th BSV
                  %th SVO
              %tbody
                %tr
                  %td= fav.team.tp_era
                  %td= fav.team.tp_whip
                  %td= fav.team.tp_h
                  %td= fav.team.tp_hr
                  %td= fav.team.tp_bb
                  %td= fav.team.tp_so
                  %td= fav.team.tp_h
                  %td= fav.team.tp_sho
                  %td= fav.team.tp_sv
                  %td= fav.team.tp_bsv
                  %td= fav.team.tp_svo
  -else
    .span10
      %p.lead Please Add Your Favorite Teams
-else
  .span10
    %p.lead Please Sign In
    .btn.btn-inverse= link_to 'Sign in with Facebook', 'auth/facebook'
