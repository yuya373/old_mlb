=debug @batting
/ =debug @pitching
/ =debug @game
.span10
  .hero-unit
    %h2
      = "#{@game[:away_fname]} - #{@game[:home_fname]}"
      %small= "@#{@game[:venue_name]}"
    %ul.inline
      %li= "#{@game[:away_sname]}: #{@game[:away_wins]} - #{@game[:away_loss]}"
      %li= "#{@game[:home_sname]}: #{@game[:home_wins]} - #{@game[:home_loss]}"
    - inning = @game[:linescore][:inning]
    %table.table.table-bordered
      %thead
        %th
        - inning.each do |inn,v|
          %th= inn
        %th R
        %th H
        %th E
      %tbody
        %td= @game[:away_sname]
        -inning.each do |k,score|
          %td= score[:away]
        %td= @game[:linescore][:away_team_runs]
        %td= @game[:linescore][:away_team_hits]
        %td= @game[:linescore][:away_team_errors]
        %tr
        %td= @game[:home_sname]
        -inning.each do |k,score|
          %td= score[:home]
        %td= @game[:linescore][:home_team_runs]
        %td= @game[:linescore][:home_team_hits]
        %td= @game[:linescore][:home_team_errors]
    .page-header
      %h4= link_to @game[:away_sname], {controller: :team, action: :show, team_id: @game[:away_id]}
    %table.table.table-hover
      %thead
        %tr
          %th Batter
          %th POS
          %th BO
          %th AB
          %th AVG
          %th H
          %th 2B
          %th 3B
          %th HR
          %th RBI
