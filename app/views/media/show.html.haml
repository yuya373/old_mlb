/ =debug @g_id
/ =debug @media
%ul.nav.nav-tabs
  %li= link_to 'BoxScore',{controller: 'game', action: 'show', g_id: @g_id}
  %li= link_to 'Atbats', {controller: 'game', action: 'atbat', g_id: @g_id}
  %li= link_to 'HighLights', {controller: 'media', action: 'show', g_id: @g_id}
-@media.each do |media|
  .hero-unit.span6
    %ul.media-list
      %li.media
        .media-body
          %h4.media-heading= media.headline
        -if media.media_type == 'condensed'
          .media-object
            =video_tag media.url, controls: true, autoplay: false, autobuffer: false, size: '480x320'
            / '336'
        -else
          .media-object
            =video_tag media.url, controls: true, autoplay: false, autobuffer: false
            / , size: '640x360'


