/ =debug @g_id
/ =debug @media
.span12
  %ul.nav.nav-tabs
    %li= link_to 'BoxScore',{controller: 'game', action: 'show', g_id: @g_id}
    %li= link_to 'Atbats', {controller: 'game', action: 'atbat', g_id: @g_id}
    %li= link_to 'HighLights', {controller: 'media', action: 'show', g_id: @g_id}
-if @cg.any?
  .hero-unit.span6
    %ul.media-list
      %li.media
        .media-body
          %h4.media-heading= @cg.first.headline
        .media-object
          =video_tag @cg.first.url, controls: true, autoplay: false, autobuffer: true, size: '480x320', poster: @cg.first.thumb
-if @media.any?
  -@media.each do |media|
    .hero-unit.span7
      %ul.media-list
        %li.media
          .media-body
            %h4.media-heading= media.headline
          .media-object
            =video_tag media.url, controls: true, autoplay: false, autobuffer: true, poster: media.thumb


