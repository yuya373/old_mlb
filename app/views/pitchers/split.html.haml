=render 'frame'
.span5
  %h5 球種別
  %table.table.table-striped
    %thead
      %tr
        %th
        %th %
        %th mp/h
        %th AB
        %th AVG
        %th HR
        %th RBI
        %th BB
        %th SO
        %th OPS
    %tbody
      -@pitch_tendencies.each do |pitch|
        %tr
          %th= pitch.pitch_type
          %td= ((pitch.num.to_f/pitch.game_num.to_f) * 100).round(1)
          %td= pitch.vel
          -@pitch_type.each do |ty|
            -if (ty.pitch_type.upcase == pitch.pitch_type)and (ty.p_b == 'p')
              %td= ty.ab
              %td= ty.avg
              %td= ty.hr
              %td= ty.rbi
              %td= ty.bb
              %td= ty.so
              %td= ty.ops
