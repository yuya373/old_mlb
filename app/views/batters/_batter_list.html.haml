            %th= batter_sort('ops',@item,@direction)
            %th= batter_sort('ab',@item,@direction)
            %th= batter_sort('h',@item,@direction)
            %th= batter_sort('r',@item,@direction)
            %th= batter_sort('rbi',@item,@direction)
            %th= batter_sort('b2',@item,@direction)
            %th= batter_sort('b3',@item,@direction)
            %th= batter_sort('hr',@item,@direction)
            %th= batter_sort('bb',@item,@direction)
            %th= batter_sort('hbp',@item,@direction)
            %th= batter_sort('sb',@item,@direction)
            %th= batter_sort('cs',@item,@direction)
            %th= batter_sort('so',@item,@direction)
            %th= batter_sort('go',@item,@direction)
            %th= batter_sort('ao',@item,@direction)
            %th= batter_sort('np',@item,@direction)

