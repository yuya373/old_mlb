        %td= batter.pos
        %td= batter.avg_sort.round(3)
        %td= batter.obp_sort.round(3)
        %td= batter.slg_sort.round(3)
        %td= batter.ops_sort.round(3)
        %td= batter.ab
        %td= batter.h
        %td= batter.r
        %td= batter.rbi
        %td= batter.b2
        %td= batter.b3
        %td= batter.hr
        %td= batter.bb
        %td= batter.hbp
        %td= batter.sb
        %td= batter.cs
        %td= batter.so
        %td= batter.go
        %td= batter.ao
        %td= batter.np
      -num += 1
      -if num % 20 == 0
        %thead
          %tr
            %th Name
            %th Team
            %th Pos
            %th= batter_sort('avg',@item,@direction)
            %th= batter_sort('obp',@item,@direction)
